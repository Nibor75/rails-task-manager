<h1>My tasks</h1>

<% @tasks.each do |task| %>
<li> <input type="checkbox" <%= task.completed ? "checked" : "" %>> <label ><%= link_to task.title, task_path(task) %></label> <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %> </li>
<% end %>
<%= link_to "Add a new task", tasks_new_path %>

